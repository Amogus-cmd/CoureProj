<UserControl x:Class="WpfApp2.ClientMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2" d:DataContext="{d:DesignInstance Type=local:ClientMenuView}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="Back" Command ="{Binding Previous}"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Content="Список Треков" Command ="{Binding ToTrack}" HorizontalAlignment="Left" Margin="199,101,0,0" VerticalAlignment="Top" Height="35" Width="93"/>
        <Button Content="Список групп" Command ="{Binding ToGroup}" HorizontalAlignment="Left" Margin="343,101,0,0" VerticalAlignment="Top" Width="86" Height="35"/>
        <Button Content="Треки исполнителей" Command="{Binding ToTrackPerformer}" HorizontalAlignment="Left" Margin="484,101,0,0" VerticalAlignment="Top" Height="35" Width="128"/>
        <Button Content="Анализ данных" Command="{Binding ToVisualization}" HorizontalAlignment="Left" Margin="334,182,0,0" VerticalAlignment="Top" Width="104" Height="43"/>

    </Grid>
</UserControl>
